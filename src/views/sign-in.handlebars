<div class="container-fluid">
    <div class="row py-3">
        <h1 class="col-12 text-center">Đăng nhập</h1>

        <div class="col-4 mt-5 pt-5">
            <form action="/sign-in" method="post">
                <div class="form-group">
                    <label for="phone">Số điện thoại:</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-danger"><i class="fa-solid fa-phone text-light"></i></span>
                        </div>
                        <input name="phone" id="phone" type="text" class="form-control shadow-none"
                            placeholder="VD: 0123456789">
                    </div>
                </div>
                <div class="form-group">
                    <label for="password">Mật khẩu:</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span onclick="showPassword(this)" class="input-group-text bg-danger" style="cursor: pointer;"><i class="fa-solid fa-eye-slash text-light"></i></span>
                        </div>
                        <input name="password" id="password" type="password" class="form-control shadow-none"
                            placeholder="VD: ilovefpt123">
                    </div>
                </div>
                <p>Chưa có tài khoản? <a href="/sign-up" class="text-danger">Đăng ký</a></p>
                <button class="btn btn-danger" type="submit">Đăng nhập</button>
            </form>

            {{#if error}}
            <div class="alert alert-danger alert-dismissible mt-2">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {{error}}
            </div>
            {{/if}}
        </div>

        <div class="col-8">
            <img src="/img/img30.png" alt="img" width="100%" height="600px">
        </div>
    </div>
</div>

<script src="/js/sign-in.js"></script>