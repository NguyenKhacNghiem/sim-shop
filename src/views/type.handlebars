<div class="container-fluid">
    <div class="row">
        {{#each sims}}
        <div class="col-3 p-3">
            <div style="border-radius: 16px;background-color: white;" class="shadow px-3 py-3">
                <div>
                    <img src="/img/{{imageSimProvider provider}}" alt="img" width="100%" height="100px">
                </div>
                <h2 class="text-center text-uppercase my-3" style="font-weight: bold;">{{code}}</h2>
                <p><b>Phí SIM: </b>{{vietnamesePrice price}}đ</p>
                <p><b>Phí chọn số: </b>{{vietnamesePrice selectionFee}}đ</p>
                <p class="text-{{colorSimType type}}"><b>Loại SIM: </b>{{type}}</p>
                <div class="text-center px-2">
                    <button onclick="addToCart('{{code}}')" class="btn btn-danger w-100" style="border-radius: 64px;"><i class="fa-solid fa-cart-shopping"></i> THÊM VÀO GIỎ HÀNG</button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<script src="/js/type.js"></script>